doctype html
html(lang="fr")
  head
    title= title
    link(rel="stylesheet", type="text/css", href="/style.css")
  body
    div(class="content")
      h1= title
      p
        if (description_html)
          !{description_html}
        else
          #{description}
      if location
        a(href=location) Continuer
      ul
        if links
          each link in links
            unless link.hidden
              li
                a(href=link.href)= link.description
        if actions
          each action in actions
            if action.fields
              li #{action.title}: #{action.description}
                form(action=action.href, method=action.method)
                  ul
                    each field in action.fields
                      li
                        label(for=field.name)= field.name
                        input(name=field.name, type=field.type, required)
                    li
                      button(type="submit") Submit
            else
              li
                a(href=action.href) #{action.description}
