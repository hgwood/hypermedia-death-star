doctype html
html(lang="fr")
  head
    title= title
    link(rel="stylesheet", type="text/css", href="/style.css")
  body
    div.content
      h1.title= title
      p.description
        if description_html
          span !{description_html}
        else
          span= description
      if location
        span
          a(href=location)
            if locationLabel
              span= locationLabel
            else
              span Continuer
      div.controls
        div.links
          span.controls-icon &#8633
          if links
            ul
              each link in links
                unless link.hidden
                  li
                    a(href=link.href)= link.description
          else
            ul
              li.no-link Pas de d√©placement possible
        div.actions
          span.controls-icon &#9995
          if actions
            ul
              each action in actions
                if action.fields
                  li #{action.title}
                    form(action=action.href, method=action.method)
                      ul
                        each field in action.fields
                          li
                            label(for=field.name)= field.name
                            input(name=field.name, type=field.type, required)
                        li
                          button(type="submit") OK
                else
                  li
                    a(href=action.href)= action.description
          else
            ul
              li.no-action Pas d'action possible
